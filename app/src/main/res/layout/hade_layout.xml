<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#FFFB3E50">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/circleImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="?android:actionBarSize"
        android:src="@mipmap/a" />

    <TextView
        android:onClick="denglu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/circleImage"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/circleImage"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout
    android:layout_below="@id/circleImage"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:onClick="shoucang"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/xingxing" />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:onClick="pinglun"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pinglun" />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="评论"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
        <LinearLayout
            android:onClick="yuedu"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/time" />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="阅读"
            android:textColor="#fff"
            android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>